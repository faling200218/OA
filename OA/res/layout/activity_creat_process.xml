<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
     android:layout_width="match_parent" 
     android:layout_height="match_parent" 
     android:orientation="vertical" > 
     <ScrollView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         
     <RelativeLayout  
         android:layout_width="match_parent" 
         android:padding="10dp" 
         android:layout_height="wrap_content"> 
          
         <TextView 
 	        android:layout_width="wrap_content" 
 	        android:layout_height="wrap_content" 
 	        android:padding="10dp" 
 	        android:textSize="20sp" 
 	        android:layout_alignRight="@+id/tv_processName"
 	        android:layout_alignBaseline="@+id/et_authors"
 	        android:text="发起人：" 
 	        android:id="@+id/tv_authors"/> 
        <EditText  
 	        android:layout_width="match_parent" 
 	        android:layout_height="wrap_content" 
 	        android:id="@+id/et_authors" 
 	        android:layout_centerHorizontal="true" 
 	        android:layout_toRightOf="@+id/tv_authors"
 	        android:background="@drawable/bg_edittext"
		   	android:padding="10dp"
			android:textColorHint="#AAAAAA"
			android:textSize="18dp"
			android:singleLine="true"
	        android:layout_gravity="center"
	        android:layout_margin="10dp"/> 
          
         <TextView 
 	        android:layout_width="wrap_content" 
 	        android:layout_height="wrap_content" 
 	        android:padding="10dp" 
 	        android:textSize="20sp" 
 	        android:text="流程主题：" 
 	        android:layout_below="@+id/tv_authors"
 	        android:layout_alignBaseline="@+id/et_processName"
 	        android:id="@+id/tv_processName"/> 
        <EditText  
 	        android:layout_width="match_parent" 
 	        android:layout_height="wrap_content" 
 	        android:id="@+id/et_processName" 
 	        android:layout_below="@+id/tv_authors"
 	        android:layout_centerHorizontal="true" 
 	        android:layout_toRightOf="@+id/tv_processName"
 	        android:background="@drawable/bg_edittext"
		   	android:padding="10dp"
			android:textColorHint="#AAAAAA"
			android:textSize="18dp"
			android:singleLine="true"
	        android:layout_gravity="center"
	        android:layout_margin="10dp"/> 

        <EditText  
 	        android:layout_width="match_parent" 
 	        android:layout_height="wrap_content" 
 	        android:id="@+id/et_processDes" 
 	        android:layout_centerHorizontal="true" 
 	        android:layout_below="@+id/tv_processName"
 	        android:background="@drawable/bg_edittext"
		   	android:padding="10dp"
			android:textColorHint="#AAAAAA"
			android:textSize="18dp"
	        android:layout_gravity="center"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="3dp"
	        android:hint="请输入流程内容"
	        android:gravity="top|left" 
	        android:lineSpacingExtra="1dp"
	        android:minLines="4"/>
         
        <TextView 
 	        android:layout_width="wrap_content" 
 	        android:layout_height="wrap_content" 
 	        android:padding="10dp" 
 	        android:textSize="20sp" 
 	        android:text="紧急程度：" 
 	        android:layout_below="@+id/et_processDes"
 	        android:layout_alignBaseline="@+id/spinner_level"
 	        android:id="@+id/tv_level"/> 
 	        
        <Spinner
            android:id="@+id/spinner_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_processDes"
            android:layout_toRightOf="@+id/tv_level"
            android:background="@drawable/bg_edittext"
            android:layout_centerHorizontal="true" 
			android:textColorHint="#AAAAAA"
			android:textSize="18dp"
	        android:layout_gravity="center"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"/>
        
        <Button  
         android:layout_width="wrap_content" 
         android:layout_height="wrap_content" 
         android:text="审批人:" 
         android:padding="10dp"
         android:drawableLeft="@drawable/plus1"
         android:layout_below="@+id/tv_level"
         android:textSize="20sp" 
         android:id="@+id/btn_signer"
         android:background="@drawable/bg_edittext"
		 android:textColorHint="#AAAAAA"
         android:layout_gravity="center"
         android:layout_marginLeft="10dp"
         android:layout_marginBottom="3dp"
         android:layout_marginTop="5dp"/>
        
        <GridView 
 	        android:layout_width="wrap_content" 
 	        android:layout_height="50dp" 
 	        android:id="@+id/gv_signer"
 	        android:layout_alignLeft="@+id/spinner_level"
 	        android:layout_toRightOf="@+id/btn_signer"
 	        android:layout_below="@+id/tv_level" 
            android:textSize="18sp"
            android:background="@drawable/bg_edittext"
	   	    android:padding="5dp"
	   	    android:numColumns="3"
		    android:textColorHint="#AAAAAA"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/> 
          
     <EditText 
         android:layout_width="match_parent" 
         android:layout_height="wrap_content" 
         android:id="@+id/et_file" 
         android:layout_below="@+id/btn_signer"
         android:textSize="18sp"
         android:background="@drawable/bg_edittext"
	   	 android:padding="10dp"
		 android:textColorHint="#AAAAAA"
         android:layout_gravity="center"
         android:hint="请输入要上传的附件"
	     android:gravity="top|left" 
	     android:layout_marginLeft="10dp"
	     android:layout_marginRight="10dp"
	     android:lineSpacingExtra="1dp"
	     android:minLines="2"
         /> 
      
     <Button  
         android:layout_width="wrap_content" 
         android:layout_height="wrap_content" 
         android:text="提交" 
         android:layout_below="@+id/et_file"
         android:textSize="20sp" 
         android:id="@+id/btn_submit"
         android:background="@drawable/bg_edittext"
	   	 android:padding="10dp"
		 android:textColorHint="#AAAAAA"
         android:layout_gravity="center"
         android:layout_margin="10dp"/>
     
     <Button  
         android:layout_width="wrap_content" 
         android:layout_height="wrap_content" 
         android:text="保存流程" 
         android:layout_below="@+id/et_file"
         android:textSize="20sp" 
         android:id="@+id/btn_saveProcess"
         android:layout_alignParentRight="true"
         android:background="@drawable/bg_edittext"
	   	 android:padding="10dp"
		 android:textColorHint="#AAAAAA"
         android:layout_gravity="center"
         android:layout_margin="10dp"/>
     </RelativeLayout> 
      </ScrollView>
     
 </LinearLayout> 
