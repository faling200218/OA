<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:textSize="20sp"
	        android:text="流程名称："
	        android:id="@+id/tv_processName"/>
       <EditText 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/et_processName"
	        android:layout_centerHorizontal="true"
	        android:layout_toRightOf="@+id/tv_processName"/>
    </RelativeLayout>
    "
    <RelativeLayout 
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:textSize="20sp"
	        android:text="流程说明："
	        android:id="@+id/tv_processDescription"/>
       <EditText 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/et_processDes"
	        android:layout_centerHorizontal="true"
	        android:layout_toRightOf="@+id/tv_processDescription"/>
    </RelativeLayout>
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择签批人"
        android:textSize="20sp"
        android:id="@+id/btn_sign"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sign"
        android:textSize="18sp"/>
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择附件"
        android:textSize="20sp"
        android:id="@+id/btn_upload_file"/>"
        
